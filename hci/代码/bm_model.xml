<mujoco model="MoBL_ARMS_Upper_Limb_Model_OpenSim">
  <compiler angle="radian" inertiafromgeom="true"/>
  <option timestep="0.005" gravity="0 0 -9.81"/>

  <asset>
    <texture name="arm_texture" type="2d" builtin="flat" width="512" height="512" rgb1="0.82 0.65 0.48" rgb2="0.82 0.65 0.48"/>
    <material name="arm_mat" texture="arm_texture" shininess="0.1" specular="0.05" rgba="0.82 0.65 0.48 1"/>
  </asset>

  <worldbody>
    <light name="main_light" pos="0 -2 2" dir="0 1 -1" diffuse="1 1 1" specular="0.2 0.2 0.2"/>
    <light name="side_light" pos="2 0 2" dir="-1 0 -1" diffuse="0.8 0.8 0.8" specular="0.1 0.1 0.1"/>

    <!-- 躯干 -->
    <body name="torso" pos="0 0 0">
      <geom name="torso_geom" type="capsule" fromto="0 0 0 0 0 0.3" size="0.14" material="arm_mat"/>
      <!-- 肩关节（球铰，可全向旋转） -->
      <joint name="shoulder_joint" type="ball" pos="0 0 0.3"/>

      <!-- 大臂 -->
      <body name="humerus" pos="0 0 0.3">
        <geom name="humerus_geom" type="capsule" fromto="0 0 0 0.32 0 0" size="0.05" material="arm_mat"/>
        <!-- 肘关节（铰链，只能屈伸） -->
        <joint name="elbow_joint" type="hinge" pos="0.32 0 0" axis="0 1 0" range="-1.57 1.57"/>

        <!-- 小臂 -->
        <body name="radius" pos="0.32 0 0">
          <geom name="radius_geom" type="capsule" fromto="0 0 0 0.3 0 0" size="0.045" material="arm_mat"/>
          <!-- 腕关节（球铰，可旋转） -->
          <joint name="wrist_joint" type="ball" pos="0.3 0 0"/>

          <!-- 手掌+食指+核心测距点index_tip -->
          <body name="hand" pos="0.3 0 0">
            <geom name="hand_geom" type="sphere" size="0.06" material="arm_mat"/>
            <body name="index_finger" pos="0.08 0.03 0">
              <geom name="finger_geom" type="capsule" fromto="0 0 0 0.06 0.01 0" size="0.012" material="arm_mat"/>
              <!-- 毕设核心：食指尖测距点位 index_tip (红色标记点) -->
              <site name="index_tip" pos="0.06 0.01 0" size="0.018" rgba="1 0 0 1"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- 关节驱动电机，保证手臂流畅运动 -->
  <actuator>
    <motor name="shoulder_motor" joint="shoulder_joint" ctrlrange="-1 1" gear="120"/>
    <motor name="elbow_motor" joint="elbow_joint" ctrlrange="-1 1" gear="100"/>
    <motor name="wrist_motor" joint="wrist_joint" ctrlrange="-1 1" gear="110"/>
  </actuator>
</mujoco>